<body ng-app="Mykityminder" ng-controller="MainController" >
    <h1 class="editor-title">
        Avoid Forgetting
        <button class="diy">
            导入
            <input type="file" id="fileInput">
        </button>   
    </h1>
            <kityminder-editor on-init="initEditor(editor, minder)"></kityminder-editor>
           

